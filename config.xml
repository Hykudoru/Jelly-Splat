  <?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
	
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        version     = "1.0.0"
        versionCode = "10" >

        <!-- versionCode is optional and Android only -->
		<!--<icon src="icon.png" width="125" height="125"/>-->
		
		
		<!--IOS ICON-->
		<icon src="icon.png" gap:platform="ios" width="57" height="57" />
		<icon src="icon.png" gap:platform="ios" width="72" height="72" />
		<icon src="icon.png" gap:platform="ios" width="114" height="114" />
	
	
		<!--ANDROID ICON-->
		<icon src="icon.png" gap:platform="android" gap:density="ldpi" />
		<icon src="icon.png" gap:platform="android" gap:density="mdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="hdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="xhdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="xxhdpi" />

		
		<!--WINDOWS ICON-->
		<icon src="icon.png" gap:platform="winphone" />
		

		

		<!--IOS SPLASH-->
		<gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
		<gap:splash src="splash.png" gap:platform="ios" width="640" height="960" />
		<gap:splash src="splash.png" gap:platform="ios" width="640" height="1136" />
		<gap:splash src="splash.png" gap:platform="ios" width="1024" height="748" />
		<gap:splash src="splash.png" gap:platform="ios" width="768" height="1004" />
		<!-- retina iPad support: PhoneGap 2.5.0+ only -->
		<gap:splash src="splash.png" gap:platform="ios" width="2048" height="1496" />
		<gap:splash src="splash.png" gap:platform="ios" width="1536" height="2008" />

		
		<!--ANDROID SPLASH-->
		<gap:splash src="splash.png" gap:platform="android" gap:density="ldpi" />
		<gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />
		<gap:splash src="splash.png" gap:platform="android" gap:density="hdpi" />
		<gap:splash src="splash.png" gap:platform="android" gap:density="xhdpi" />
		<gap:splash src="splash.png" gap:platform="android" gap:density="xxhdpi" />
		
		<!---WINDOWS SPLASH-->
		<gap:splash src="splash.jpg" gap:platform="winphone" />

		
		
        <preference name="phonegap-version" value="3.3.0" />

        <name>Jelly Splat</name>

        <description>
			Splat the Jelly's before the time runs out!
        </description>

        <author href="http://yoursite.com" email="alexanderfish7@gmail.com">
        Alexander Fish
        </author>
		
		
		
    </widget>